{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist/node",
    "allowJs": true,
    "sourceMap": true,
    "lib": [
      "es2022",
      "dom",
      "WebWorker"
    ]
  }
}
